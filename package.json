{
  "name": "crypto-dashboard",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "packageManager": "npm@10",
  "scripts": {
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "npm --workspace backend run dev",
    "dev:frontend": "npm --workspace frontend run dev",
    "build": "npm -ws run build",
    "lint": "npm -ws run lint || true",
    "typecheck": "npm -ws run typecheck || true",
    "db:generate": "npm --workspace backend run prisma:generate",
    "db:migrate": "npm --workspace backend run prisma:migrate",
    "db:push": "npm --workspace backend run prisma:push",
    "db:studio": "npm --workspace backend run prisma:studio",
    "db:seed": "npm --workspace backend run db:seed",
    "db:reset": "npm --workspace backend run prisma:migrate:reset && npm run db:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
